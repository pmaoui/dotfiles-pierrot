alias channel="cd ~/Wing/pps/channel/"
alias parcel="cd ~/Wing/pps/parcel/"
alias front="cd ~/Wing/pps/dashboard-client/"
alias presta="cd ~/Wing/pps/prestashop-module/"
alias core="cd ~/Wing/pps/core/"

pgadmin() {
  docker pull dpage/pgadmin4
  docker run -p 8080:80 \
    --volume=/home/pierrot/Wing/tms/pgadmin_db:/var/lib/pgadmin \
    -e "PGADMIN_DEFAULT_EMAIL=pierre.maoui@wing.eu" \
    -e "PGADMIN_DEFAULT_PASSWORD=winghero" \
    -d dpage/pgadmin4
}
