# Unix
alias ll="ls -al --color"

# Clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# ContentSquare folder's
alias pp='cd ~/Public/project-parameters'
alias caf='cd ~/Public/cs-app-feature'
alias uxa='cd ~/Public/mousetest'
alias maestro='cd ~/Public/app_cs-maestro'
alias processing='cd ~/Public/alias-goals-processing/'
alias chenv="~/dotfiles-pierrot/chenv.sh"
alias e2e="~/dotfiles-pierrot/launch-e2e.sh"

# I want to takes notes everyday
alias today="~/dotfiles-pierrot/today.sh"

# Better pager
alias less=$PAGER
alias zless=$PAGER

# Custom helpers
alias usedports='sudo netstat -tulpn' # opened ports

# upload file easily
transfer() { if [ $# -eq 0 ]; then echo "No arguments specified. Usage:\necho transfer /tmp/test.md\ncat /tmp/test.md | transfer test.md"; return 1; fi
tmpfile=$( mktemp -t transferXXX ); if tty -s; then basefile=$(basename "$1" | sed -e 's/[^a-zA-Z0-9._-]/-/g'); curl --progress-bar --upload-file "$1" "https://transfer.sh/$basefile" >> $tmpfile; else curl --progress-bar --upload-file "-" "https://transfer.sh/$1" >> $tmpfile ; fi; cat $tmpfile; rm -f $tmpfile; }

# resize gif for CS
resizegif() {
    tmpfile=$( mktemp -t resizegifXXX )
    convert $1 -coalesce $tmpfile
    convert $tmpfile -resize 128 $1.new
}

source ~/dotfiles-pierrot/git-alias-extension

gh() { cat ~/dotfiles-pierrot/git-*|grep $1; }
ah() { cat ~/dotfiles-pierrot/aliases|grep $1; }
cjson() { curl $1 | jq '.'; }

# start vim with FZF to fuzzy find a file
alias vimf='vim -c ":FZF ."'
